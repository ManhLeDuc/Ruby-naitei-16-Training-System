<div class="subject-container">
  <h3><%= list_name %></h3>
  <section class="add-member-form center_div">
    <%= form_tag path, remote: true do %>
      <%= hidden_field_tag :course_id, @course.id %>
      <%= label_tag :email %>
      <%= email_field_tag :email %>
      <%= submit_tag button_text %>
    <% end %>
  </section>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col"><%= t "courses.show.id" %></th>
        <th scope="col"><%= t "courses.show.name" %></th>
        <th scope="col"><%= t "courses.show.email" %></th>
        <th scope="col"><%= t "courses.show.action" %></th>
      </tr>
    </thead>
    <tbody id=<%= body_id %>>
      <%= render partial: "user_item", collection: users%>
    </tbody>
  </table>
</div>
