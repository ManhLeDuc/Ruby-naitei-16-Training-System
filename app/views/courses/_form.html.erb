<%= form_for @course do |f| %>
  <%= render partial: "shared/error_messages", locals: {object: @course} %>
  <%= f.label :name, class: "required" %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label :description, class: "required" %>
  <%= f.text_area :description, class: "form-control" %>
  <% if @course.new_record? %>
    <%= f.label :start_time, class: "required" %>
    <%= f.date_field :start_time, class: "form-control" %>
  <% else %>
    <%= f.label :activated, class: "required" %>
    <%= f.check_box :activated %>
    <br>
  <% end %>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
