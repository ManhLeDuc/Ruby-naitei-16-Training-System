<tr class="subjects">
  <td><%= enrollment_counter + 1 %></td>
  <td><%= enrollment.user_name %></td>
  <td><%= enrollment.user_email %></td>
  <td>
    <% if current_user.role_supervisor? %>
      <%= link_to enrollment, method: :delete, remote: true, data: {confirm: t("delete_confirm")},
      class: "text-danger", data: {"mdb-toggle": "tooltip"}, title: t("delete") do %>
        <i class="fa fa-trash-alt me-3"></i>
      <% end %>
    <% end %>
    <%= link_to enrollment, class: "text-info", data: {"mdb-toggle": "tooltip"}, title: t("details") do %>
      <i class="fa fa-eye me-3"></i>
    <% end %>
  </td>
</tr>
